<div class="row">
  <p class="lead text-success fw-bold fs-4">
    Login to Bug Tracker
  </p>
  <div class="col-6">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <%= f.input :email, class: 'mb-2', wrapper_html: { class: 'mb-2' }  %>
      <%= f.input :password, class: 'mb-2', wrapper_html: { class: 'mb-2' }  %>

      <% if devise_mapping.rememberable? %>
        <div class="form-group mb-2">
          <%= f.check_box :remember_me%>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <%= f.button :submit, data: { turbo: false }, value: 'Login', class: 'btn btn-primary mt-2' %>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
