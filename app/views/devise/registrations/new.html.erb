<div class="row">
  <p class="lead text-success fw-bold fs-4">
    Sign up to Bug Tracker
  </p>
  <div class="col-6">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.input :first_name, class: 'mb-2', wrapper_html: { class: 'mb-2' } %>
      <%= f.input :last_name, class: 'mb-2', wrapper_html: { class: 'mb-2' }  %>
      <%= f.input :email, class: 'mb-2', wrapper_html: { class: 'mb-2' }  %>
      <%= f.association :role %>
      <%= f.input :password, class: 'mb-2', wrapper_html: { class: 'mb-2' }  %>
      <%= f.input :password_confirmation, class: 'mt-2', wrapper_html: { class: 'mb-2' }  %>
      <%= f.button :submit, data: { turbo: false }, class: 'btn btn-primary mt-2' %>
    <% end %>
  </div>
</div>
<%= render "devise/shared/links" %>
