<table class="table">
  <thead>
    <tr>
      <th class="text-center">Title</th>
      <th class="text-center">Type</th>
      <th class="text-center">Status</th>
      <th class="text-center">Action</th>
    </tr>
  </thead>
  <tbody>
    <% tickets.each do |ticket| %>
    <tr>
      <td width="30%"><%= link_to ticket.title, ticket_path(ticket) %></td>
      <td class="text-center"><%= ticket.bug_type %></td>
      <td class="text-center"><%= ticket.status %></td>
      <td class="text-center">
        <%= link_to 'show', ticket_path(ticket), class: 'btn btn-primary btn-sm' %>
        <% if user_signed_in? && policy(ticket).assign_new?  %>
          <%= link_to 'assign', assign_get_path(ticket), class: 'btn btn-success btn-sm' %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>