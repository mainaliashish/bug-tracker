<div class="container">
  <div class="row">
      <div class="col-12">
        <p class="lead text-danger fw-bold fs-4">
          Newly posted Tickets
        </p>
        <%= render partial: 'tickets/table', locals: { page: 'home', tickets: @tickets } %>
      </div>
  </div>
  <div class="row">
      <div class="col-12">
        <p class="lead text-success fw-bold fs-4">
          Recently solved Tickets
        </p>
        <%= render partial: 'tickets/table', locals: { page: 'home', tickets: @fixed_tickets } %>
      </div>
    </div>
    <hr/>
    <div class="row">
      <div class="col-12">
        <p class="lead text-success fw-bold fs-4">
          Newly added Projects
        </p>
        <%= render partial: 'projects/table', locals: { page: 'home' }%>
      </div>
    </div>
  </div>

  <div class="row mt-3 mb-3">
    <div class="col-6">
      <p class="lead text-success fw-bold fs-4">
        List of projects and managers
      </p>
      <ul class="list-group list-group-flush">
        <% @projects.each do |project| %>
          <li class="list-group-item">
            <%= link_to project.name, project_path(project) %>
            <span class="float-end">- <%= project.project_manager.full_name %></span>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>